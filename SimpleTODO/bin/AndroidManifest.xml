<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simpletodo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.simpletodo.main.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver 
            android:name="com.simpletodo.appwidget.SimpleTODOAppWidgetProvider">
			<meta-data 
    			android:name="android.appwidget.provider"
				android:resource="@layout/appwidget_provider" />
			<intent-filter>
			<action 
    			android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			<action 
    			android:name="android.appwidget.action.TEST_ACTIVITY" />
			</intent-filter>
		</receiver>
    </application>

</manifest>
